<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.tkvangorder.intelliflix</id>
    <name>IntelliFlix Developer Assistance</name>
    <vendor>tkvangorder</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="org.tkv.intelliflix.services.IntelliFlixApplicationService"/>
        <projectService serviceImplementation="org.tkv.intelliflix.services.IntelliFlixProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="org.tkv.intelliflix.listeners.IntelliFlixProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
    <actions>
        <group id="org.tkv.intelliflix.IntelliFlixActions" text="Intelli-Flix" popup="true" icon="IntelliFlixIcons.IntelliFlix" >
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>
        <action id="org.tkv.intelliflix.codesuggest" class="org.tkv.intelliflix.actions.CodeSuggestAction"
                text="OpenGPT Code Suggestion" description="Ask OpenGpt for a code suggestion in the context of the current editor">
            <add-to-group group-id="org.tkv.intelliflix.IntelliFlixActions" anchor="first"/>
        </action>
        <action id="org.tkv.intelliflix.actions.OpenChatAction" class="org.tkv.intelliflix.actions.OpenChatAction"
                text="Chat With OpenGPT" description="Open a chat tools window">
            <add-to-group group-id="org.tkv.intelliflix.IntelliFlixActions" anchor="last"/>
        </action>
    </actions>
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="IntelliFlix" secondary="true" icon="AllIcons.General.Modified" anchor="right"
                    factoryClass="org.tkv.intelliflix.windows.ChatGptToolWindowFactory"/>
    </extensions>
</idea-plugin>
